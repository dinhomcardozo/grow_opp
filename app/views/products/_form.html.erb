<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_type, style: "display: block" %>
    <%= form.select :product_type, ['Digital', 'Físico', 'Serviço'], {}, { class: 'form-control' } %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, maxlength: 200, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, step: 0.01, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, [['Ativo', true], ['Inativo', false]], {}, { class: 'form-control' } %>
  </div>

  <div>
    <%= form.label :license_id, "Licença", style: "display: block" %>
    <%= form.collection_select :license_id, License.all, :id, :full_description, { include_blank: "Selecione uma licença" }, { class: 'form-control' } %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>