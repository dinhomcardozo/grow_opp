<h1><%= action_name == 'new' ? 'Nova Licença' : 'Editar Licença' %></h1>

<%= form_with model: @license do |form| %>
  <% if @license.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@license.errors.count, "erro") %> impediram que esta licença fosse salva:</h2>
      <ul>
        <% @license.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, "Descrição" %>
    <%= form.text_field :description, class: 'form-control', placeholder: "Ex: Licença Premium" %>
  </div>

  <div>
    <%= form.label :license_years, "Anos" %>
    <%= form.number_field :license_years, class: 'form-control', min: 0, placeholder: "Ex: 1" %>
  </div>

  <div>
    <%= form.label :license_months, "Meses" %>
    <%= form.number_field :license_months, class: 'form-control', min: 0, placeholder: "Ex: 6" %>
  </div>

  <div>
    <%= form.label :license_days, "Dias" %>
    <%= form.number_field :license_days, class: 'form-control', min: 0, placeholder: "Ex: 30" %>
  </div>

  <div>
    <%= form.label :status, "Status" %>
    <%= form.select :status, [['Ativo', true], ['Inativo', false]], { include_blank: "Selecione um status" }, class: 'form-control' %>
  </div>

  <div style="margin-top: 1rem;">
    <%= form.submit "Salvar", class: 'btn btn-primary' %>
  </div>
<% end %>