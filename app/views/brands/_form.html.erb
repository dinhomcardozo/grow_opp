<h1><%= @brand.new_record? ? 'Nova Marca' : 'Editar Marca' %></h1>
<%= form_with model: @brand, local: true do |form| %>
  <div>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :status, 'Status' %>
    <%= form.select :status, [['Ativo', true], ['Inativo', false]], {}, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :client_id, 'Cliente' %>
    <%= form.collection_select :client_id, @clients, :id, :company_name, { prompt: 'Selecione um cliente' }, class: 'form-control' %>
  </div>
  <div>
    <%= form.submit 'Salvar', class: 'btn btn-primary mt-3' %>
  </div>
<% end %>
<%= link_to 'Voltar', brands_path, class: 'btn btn-secondary mt-3' %>